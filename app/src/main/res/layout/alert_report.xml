<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/ll_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:paddingEnd="10dp"
            android:background="@drawable/ic_bug"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPORT"
            android:layout_weight="1"
            android:fontFamily="@font/courbd"
            android:includeFontPadding="false"
            android:textSize="40sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/ed_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/colorPrimary"
        android:singleLine="true"
        android:hint="- TITLE -"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:fontFamily="@font/boldi"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ed_email_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/colorPrimary"
        android:hint="ENTER YOUR ISSUES HERE"
        android:textColor="@color/colorPrimaryDark"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:selectAllOnFocus="false"
        android:textSize="15sp"
        android:fontFamily="@font/boldi"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_cancel_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:fontFamily="@font/boldi"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:layout_weight="1"
            android:fontFamily="@font/boldi"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>

</LinearLayout>